<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="380dp"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentPadding="2dp">

    <CheckBox
        android:id="@+id/projectTaskCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="#E8D3C9"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/source_serif_pro"
        android:textSize="20sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/todoline"
        android:layout_gravity="bottom"
        android:contentDescription="@string/line" />

    <ImageView
        android:id="@+id/deleteProjectTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:src="@drawable/deletetask"
        android:contentDescription="@string/delete_goal_button" />
</FrameLayout>