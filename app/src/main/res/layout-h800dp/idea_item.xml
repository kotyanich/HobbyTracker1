<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:padding="10dp">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/idea_vatiants"
            android:contentDescription="@string/list"/>

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp">
            <TextView
                android:layout_width="270dp"
                android:layout_height="25dp"
                android:id="@+id/ideaDesc"
                android:textSize="20sp"
                android:fontFamily="@font/source_serif_pro_semibold"/>
            <TextView
                android:id="@+id/ideaName"
                android:layout_width="270dp"
                android:layout_height="31dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/source_serif_pro"
                android:textColor="#89543C"
                android:textSize="20sp"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>


        <ImageView
            android:id="@+id/deleteIdea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:contentDescription="@string/delete_goal_button"
            android:src="@drawable/deletetask"
            android:layout_marginEnd="15dp"/>
    </FrameLayout>


</LinearLayout>