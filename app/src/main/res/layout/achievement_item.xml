<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/achievement_card11"
            android:contentDescription="@string/card"/>

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/logroTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="0.8"
                android:fontFamily="@font/source_serif_pro_bold"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="0.8"
                android:fontFamily="@font/source_serif_pro"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="25dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/medal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/medal"
                android:src="@drawable/no_medal" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bronze_reward"
            android:layout_marginStart="260dp"
            android:layout_gravity="center_vertical"
            android:visibility="gone">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="75dp"
                android:src="@drawable/ach_button"
                android:contentDescription="@string/reward"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/coin_bigger"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:contentDescription="@string/coin"/>
            <TextView
                android:id="@+id/balance_reward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:fontFamily="@font/source_serif_pro_semibold"
                android:text="@string/bronze_price"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="5dp"/>

        </FrameLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/silver_reward"
            android:layout_marginStart="260dp"
            android:layout_gravity="center_vertical"
            android:visibility="gone">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="75dp"
                android:src="@drawable/ach_button"
                android:contentDescription="@string/reward"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/coin_bigger"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:contentDescription="@string/coin"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:fontFamily="@font/source_serif_pro_semibold"
                android:text="@string/silver_price"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="5dp"/>

        </FrameLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gold_reward"
            android:layout_marginStart="260dp"
            android:layout_gravity="center_vertical"
            android:visibility="gone">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="75dp"
                android:src="@drawable/ach_button"
                android:contentDescription="@string/reward"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/coin_bigger"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:contentDescription="@string/coin"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:fontFamily="@font/source_serif_pro_semibold"
                android:text="@string/gold_price"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="5dp"/>

        </FrameLayout>
    </FrameLayout>

</FrameLayout>