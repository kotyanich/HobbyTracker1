<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/projectTasksRecyclerView"
        android:layout_width="290dp"
        android:layout_height="170dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:contentDescription="@string/recycler"
        android:nestedScrollingEnabled="true" />

    <TextView
        android:id="@+id/projectName"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/source_serif_pro_semibold"
        android:textSize="22sp"
        android:text="@string/proj_name"
        android:textAlignment="center" />

    <ImageView
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:src="@drawable/line_4"
        android:layout_marginTop="60dp"
        android:contentDescription="@string/line" />

    <ImageView
        android:id="@+id/addProjectTask"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="end"
        app:srcCompat="@drawable/frame_288961"
        android:contentDescription="@string/add_proj_task" />

</FrameLayout>