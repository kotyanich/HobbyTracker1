<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECE7E0"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ECE7E0"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginStart="81dp"
                    android:contentDescription="@string/pattern"
                    app:srcCompat="@drawable/smth11111" />

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ECE7E0"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/logohobby"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="31dp"
                    android:layout_marginTop="10dp"
                    android:contentDescription="@string/ico"
                    app:srcCompat="@drawable/cactus_ico" />

                <LinearLayout
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="125dp"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/hobby"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/source_serif_pro_semibold"
                            android:src="@drawable/line_4"
                            android:textSize="32sp" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/line"
                            android:src="@drawable/line_4" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="80dp"
                    android:contentDescription="@string/pattern"
                    app:srcCompat="@drawable/dots1" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/source_serif_pro_semibold"
                    android:text="@string/activity"
                    android:textSize="32sp" />

                <ImageView
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/line"
                    app:srcCompat="@drawable/line_5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/source_serif_pro"
                    android:text="@string/activity_descr"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="160dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/activity_block"
                            app:srcCompat="@drawable/total_1_" />

                        <TextView
                            android:id="@+id/wholeTimeInfo"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/source_serif_pro_semibold"
                            android:text="@string/total_time"
                            android:textSize="18sp" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/activity_block"
                            app:srcCompat="@drawable/month" />

                        <TextView
                            android:id="@+id/monthInfo"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/source_serif_pro_semibold"
                            android:text="@string/month_activity"
                            android:textSize="18sp" />
                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/activity_block"
                            app:srcCompat="@drawable/per_week" />

                        <TextView
                            android:id="@+id/weekInfo"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/source_serif_pro_semibold"
                            android:text="@string/week_activity"
                            android:textSize="18sp" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp">

                        <ImageView
                            android:layout_width="160dp"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/activity_block"
                            app:srcCompat="@drawable/per_day" />

                        <TextView
                            android:id="@+id/dayInfo"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/source_serif_pro_semibold"
                            android:text="@string/daily_activity"
                            android:textSize="18sp" />
                    </FrameLayout>

                </LinearLayout>
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ECE7E0">

                <ImageView
                    android:id="@+id/addTime"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="#ECE7E0"
                    android:contentDescription="@string/add_time_button"
                    android:src="@drawable/add_time_button" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:fontFamily="@font/source_serif_pro_semibold"
                    android:text="@string/add_time"
                    android:textSize="20sp" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="40dp"
                android:background="#ECE7E0"

                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/source_serif_pro_semibold"
                    android:text="@string/planning"
                    android:textSize="30sp" />

                <ImageView
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/line"
                    app:srcCompat="@drawable/line_5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/source_serif_pro"
                    android:text="@string/planning_descr"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="160dp"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:id="@+id/tasksinnactive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/taskGrey"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#ECE7E0"
                            android:contentDescription="@string/task_button"
                            app:srcCompat="@drawable/tasks_button" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:fontFamily="@font/source_serif_pro_semibold"
                            android:text="@string/tasks"
                            android:textSize="20sp" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/taskactive"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/task"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#ECE7E0"
                            android:contentDescription="@string/task_button"
                            app:srcCompat="@drawable/projects_button" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:fontFamily="@font/source_serif_pro_semibold"
                            android:text="@string/tasks"
                            android:textSize="20sp" />
                    </FrameLayout>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp">

                    <FrameLayout
                        android:id="@+id/projinnactive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/projectGrey"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/proj_button"
                            app:srcCompat="@drawable/tasks_button" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:fontFamily="@font/source_serif_pro_semibold"
                            android:text="@string/projects"
                            android:textSize="20sp" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/projactive"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/project"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#ECE7E0"
                            android:contentDescription="@string/proj_button"
                            app:srcCompat="@drawable/projects_button" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:fontFamily="@font/source_serif_pro_semibold"
                            android:text="@string/projects"
                            android:textSize="20sp" />
                    </FrameLayout>
                </FrameLayout>
            </LinearLayout>

            <FrameLayout
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/taskList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/list"
                    app:srcCompat="@drawable/projects_visible_screen" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/taskItems"
                    android:layout_width="290dp"
                    android:layout_height="230dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="33dp"
                    android:contentDescription="@string/recycler" />

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/projRecyclerView"
                    android:layout_width="330dp"
                    android:layout_height="260dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:contentDescription="@string/recycler" />

                <ImageView
                    android:id="@+id/leftarrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="44dp"
                    android:contentDescription="@string/left_arrow"
                    app:srcCompat="@drawable/leftarrow" />

                <ImageView
                    android:id="@+id/rightarrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="44dp"
                    android:layout_marginEnd="70dp"
                    android:contentDescription="@string/right_arrow"
                    app:srcCompat="@drawable/rightarrow" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="#EAE5DE">

                <LinearLayout
                    android:id="@+id/projectbuttons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/addProj"
                            android:layout_width="260dp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#ECE7E0"
                            android:contentDescription="@string/add_proj_button"
                            android:src="@drawable/add_task_button_1_" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:fontFamily="@font/source_serif_pro_semibold"
                            android:text="@string/add_proj"
                            android:textSize="20sp" />
                    </FrameLayout>

                    <ImageView
                        android:id="@+id/deleteProject"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:backgroundTint="#ECE7E0"
                        android:contentDescription="@string/del_proj_button"
                        android:src="@drawable/deleteproj" />
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/taskaddbutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp">

                    <ImageView
                        android:id="@+id/addTask"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/add_task_button"
                        android:src="@drawable/frame_288916_1_" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:fontFamily="@font/source_serif_pro_semibold"
                        android:text="@string/add_task"
                        android:textSize="22sp" />
                </FrameLayout>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:background="#ECE7E0"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/source_serif_pro_semibold"
                    android:text="@string/ideas"
                    android:textSize="30sp" />

                <ImageView
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/line"
                    app:srcCompat="@drawable/line_5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/source_serif_pro"
                    android:text="@string/url_descr"
                    android:textSize="18sp" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/ideasList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/list"
                    app:srcCompat="@drawable/projects_visible_screen" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/ideasItems"
                    android:layout_width="290dp"
                    android:layout_height="230dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="35dp"
                    android:contentDescription="@string/recycler" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/ideaaddbutton"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:background="#EAE5DE">

                <ImageView
                    android:id="@+id/addIdea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/add_task_button"
                    android:src="@drawable/frame_288916_1_" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:fontFamily="@font/source_serif_pro_semibold"
                    android:text="@string/add_idea"
                    android:textSize="20sp" />
            </FrameLayout>
        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/bottomPanel"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:contentDescription="@string/panel"
            app:srcCompat="@drawable/bottom_panel" />

        <ImageView
            android:id="@+id/home"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:contentDescription="@string/home_button"
            app:srcCompat="@drawable/grey_main" />

        <ImageView
            android:id="@+id/profile"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="20dp"
            android:contentDescription="@string/achievements_button"
            app:srcCompat="@drawable/profile" />

        <ImageView
            android:id="@+id/shop"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:contentDescription="@string/shop"
            app:srcCompat="@drawable/shop" />
    </FrameLayout>
</RelativeLayout>


