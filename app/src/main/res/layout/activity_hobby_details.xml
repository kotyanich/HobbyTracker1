<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECE7E0"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ECE7E0"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="81dp"
                    app:srcCompat="@drawable/smth11111"
                    android:contentDescription="@string/pattern"/>

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ECE7E0"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/logohobby"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="31dp"
                    android:layout_marginTop="25dp"
                    app:srcCompat="@drawable/cactus_ico"
                    android:contentDescription="@string/ico"/>

                <LinearLayout
                    android:layout_width="266dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="125dp"
                    android:layout_marginTop="30dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/hobby"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/source_serif_pro_semibold"
                            android:textSize="36sp"
                            android:src="@drawable/line_4"/>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/line_4"
                            android:contentDescription="@string/line"/>
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="95dp"
                    app:srcCompat="@drawable/dots1"
                    android:contentDescription="@string/pattern"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="180dp"
                    android:fontFamily="@font/source_serif_pro_semibold"
                    android:text="@string/activity"
                    android:textSize="32sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="220dp"
                    app:srcCompat="@drawable/line_5"
                    android:contentDescription="@string/line"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="250dp"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/total_1_"
                            android:contentDescription="@string/activity_block"/>

                        <TextView
                            android:id="@+id/wholeTimeInfo"
                            android:layout_width="165dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/source_serif_pro_semibold"
                            android:text="@string/total_time"
                            android:textSize="20sp" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/month"
                            android:contentDescription="@string/activity_block"/>

                        <TextView
                            android:id="@+id/monthInfo"
                            android:layout_width="165dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/source_serif_pro_semibold"
                            android:text="@string/month_activity"
                            android:textSize="20sp" />
                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="360dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/per_week"
                            android:contentDescription="@string/activity_block"/>

                        <TextView
                            android:id="@+id/weekInfo"
                            android:layout_width="165dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/source_serif_pro_semibold"
                            android:text="@string/week_activity"
                            android:textSize="20sp" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/per_day"
                            android:contentDescription="@string/activity_block"/>

                        <TextView
                            android:id="@+id/dayInfo"
                            android:layout_width="165dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/source_serif_pro_semibold"
                            android:text="@string/daily_activity"
                            android:textSize="20sp" />
                    </FrameLayout>

                </LinearLayout>


            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ECE7E0">

                <ImageButton
                    android:id="@+id/addTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="#ECE7E0"
                    android:contentDescription="@string/add_time_button"
                    android:src="@drawable/add_time_button" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:fontFamily="@font/source_serif_pro_semibold"
                    android:text="@string/add_time"
                    android:textSize="24sp"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:background="#ECE7E0"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/source_serif_pro_semibold"
                    android:text="@string/planning"
                    android:textSize="32sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/line_5"
                    android:contentDescription="@string/line"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:id="@+id/tasksinnactive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/taskGrey"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#ECE7E0"
                            app:srcCompat="@drawable/tasks_button"
                            android:contentDescription="@string/task_button"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:fontFamily="@font/source_serif_pro_semibold"
                            android:text="@string/tasks"
                            android:textSize="24sp" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/taskactive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/task"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#ECE7E0"
                            app:srcCompat="@drawable/projects_button"
                            android:contentDescription="@string/task_button"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:fontFamily="@font/source_serif_pro_semibold"
                            android:text="@string/tasks"
                            android:textSize="24sp" />
                    </FrameLayout>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp">

                    <FrameLayout
                        android:id="@+id/projinnactive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/projectGrey"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/tasks_button"
                            android:contentDescription="@string/proj_button"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:fontFamily="@font/source_serif_pro_semibold"
                            android:text="@string/projects"
                            android:textSize="24sp" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/projactive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/project"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#ECE7E0"
                            app:srcCompat="@drawable/projects_button"
                            android:contentDescription="@string/proj_button"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:fontFamily="@font/source_serif_pro_semibold"
                            android:text="@string/projects"
                            android:textSize="24sp" />
                    </FrameLayout>
                </FrameLayout>
            </LinearLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp">
                <ImageView
                    android:id="@+id/taskList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/frame_288950"
                    android:contentDescription="@string/list"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/taskItems"
                    android:layout_width="370dp"
                    android:layout_height="290dp"
                    android:contentDescription="@string/recycler"/>

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/projRecyclerView"
                    android:layout_width="380dp"
                    android:layout_height="298dp"
                    android:layout_gravity="center_horizontal"
                    android:contentDescription="@string/recycler" />

                <ImageView
                    android:id="@+id/leftarrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="34dp"
                    app:srcCompat="@drawable/leftarrow"
                    android:contentDescription="@string/left_arrow"/>

                <ImageView
                    android:id="@+id/rightarrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="34dp"
                    android:layout_marginEnd="70dp"
                    app:srcCompat="@drawable/rightarrow"
                    android:contentDescription="@string/right_arrow"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="#EAE5DE"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:id="@+id/projectbuttons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/addProj"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#ECE7E0"
                            android:src="@drawable/add_task_button_1_"
                            android:contentDescription="@string/add_proj_button"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:fontFamily="@font/source_serif_pro_semibold"
                            android:text="@string/add_proj"
                            android:textSize="24sp" />
                    </FrameLayout>

                    <ImageView
                        android:id="@+id/deleteProject"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:backgroundTint="#ECE7E0"
                        android:src="@drawable/deleteproj"
                        android:contentDescription="@string/del_proj_button"/>
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/taskaddbutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp">

                    <ImageView
                        android:id="@+id/addTask"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/frame_288916_1_"
                        android:contentDescription="@string/add_task_button"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:fontFamily="@font/source_serif_pro_semibold"
                        android:text="@string/add_task"
                        android:textSize="24sp" />
                </FrameLayout>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/bottomPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/bottom_panel"
            android:contentDescription="@string/panel"/>

        <ImageButton
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/home_button"
            app:srcCompat="@drawable/grey_main" />

        <ImageButton
            android:id="@+id/profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:contentDescription="@string/achievements_button"
            app:srcCompat="@drawable/profile" />

        <ImageButton
            android:id="@+id/shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/shop"
            app:srcCompat="@drawable/shop" />
    </FrameLayout>
</RelativeLayout>


